<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yc="http://schemas.android.com/apk/res/com.example.bigapps"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <com.example.bigapps.progressbar.HorizontalProgressbarWithNum
            android:id="@+id/progressbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#FFFFFFFF"
            android:padding="5dp" 
            yc:progress_reach_color="#FF0000FF"
            yc:progress_unreach_color="#880000FF"
            yc:progress_text_color="#FF0000FF"
            yc:progress_text_offset="10dp"
            yc:progress_text_size="20sp"
            yc:progress_reach_bar_height="3dp"
            yc:progress_unreach_bar_height="2dp"
            />
        
         <com.example.bigapps.progressbar.HorizontalProgressbarWithNum
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#FFFFFFFF"
            android:padding="5dp" 
             android:progress="30"
            yc:progress_reach_color="#FFFF0000"
            yc:progress_unreach_color="#88FF0000"
            yc:progress_text_color="#FFFF0000"
            yc:progress_text_offset="10dp"
            yc:progress_text_size="20sp"
            yc:progress_reach_bar_height="3dp"
            yc:progress_unreach_bar_height="2dp"
            />
         
          <com.example.bigapps.progressbar.HorizontalProgressbarWithNum
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#FFFFFFFF"
            android:padding="5dp" 
             android:progress="50"
            yc:progress_reach_color="#FF0000FF"
            yc:progress_unreach_color="#880000FF"
            yc:progress_text_color="#FF0000FF"
            yc:progress_text_offset="10dp"
            yc:progress_text_size="20sp"
            yc:progress_reach_bar_height="3dp"
            yc:progress_unreach_bar_height="2dp"
            />
        
         <com.example.bigapps.progressbar.RoundProgressbarWithNum
            android:id="@+id/progressbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp" 
            yc:progress_reach_color="#FF0000FF"
            yc:progress_unreach_color="#880000FF"
            yc:progress_text_color="#FF0000FF"
            yc:progress_text_offset="10dp"
            yc:progress_text_size="20sp"
            yc:progress_reach_bar_height="3dp"
            yc:progress_unreach_bar_height="2dp"
            yc:radius="30dp"
            />
         
          <com.example.bigapps.progressbar.RoundProgressbarWithNum
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp" 
            android:progress="30"
            yc:progress_reach_color="#FFFF0000"
            yc:progress_unreach_color="#88FF0000"
            yc:progress_text_color="#FFFF0000"
            yc:progress_text_offset="10dp"
            yc:progress_text_size="30sp"
            yc:progress_reach_bar_height="4dp"
            yc:progress_unreach_bar_height="2dp"
            yc:radius="50dp"
            />
          <com.example.bigapps.progressbar.RoundProgressbarWithNum
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp" 
            android:progress="50"
            yc:progress_reach_color="#FF00FF00"
            yc:progress_unreach_color="#8800FF00"
            yc:progress_text_color="#FF00FF00"
            yc:progress_text_offset="10dp"
            yc:progress_text_size="40sp"
            yc:progress_reach_bar_height="5dp"
            yc:progress_unreach_bar_height="3dp"
            yc:radius="70dp"
            />
    </LinearLayout>

</ScrollView>